<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.quibit">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchRewards">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.quibit.MainActivity" />
        </activity>
        <activity android:name=".CreateGoal">
             <meta-data
             android:name="android.support.PARENT_ACTIVITY"
             android:value="com.epicodus.quibit.ItemDetail">
             </meta-data>
        </activity>
        <activity android:name=".ItemDetail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.quibit.SearchRewards"></meta-data>
        </activity>
        <activity android:name=".About">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.quibit.MainActivity" />
        </activity>
    </application>

</manifest>