<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.quibit">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/quibit"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/NoActionBarTheme"></activity>
        <activity android:name=".ui.SearchRewards">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.quibit.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.CreateGoal">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.quibit.ui.ItemDetail" />
        </activity>
        <activity android:name=".ui.ItemDetail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.quibit.ui.SearchRewards" />
        </activity>
        <activity android:name=".ui.About">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.quibit.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.CreateAccountActivity"></activity>
    </application>

</manifest>