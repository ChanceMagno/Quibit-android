<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:layout_editor_absoluteY="81dp"
tools:layout_editor_absoluteX="0dp"
android:background="@drawable/gradient">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        android:layout_width="340dp"
        android:layout_height="282dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addQuibitfloatingActionButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chart1"
        android:clickable="true"
        app:backgroundTint="@color/positiveColor"
        app:fabSize="normal"
        app:srcCompat="@drawable/quibit"
        android:layout_marginRight="68dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/setGoalfloatingActionButton"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/quibitTextView"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/chart1"
        app:layout_constraintVertical_bias="0.517" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/setGoalfloatingActionButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/addQuibitfloatingActionButton"
        android:layout_marginStart="68dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_search_category_default"
        android:layout_marginLeft="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/goalTextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/chart1" />

    <TextView
        android:id="@+id/goalTextView"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setGoalfloatingActionButton"
        android:layout_alignStart="@+id/setGoalfloatingActionButton"
        android:layout_below="@+id/setGoalfloatingActionButton"
        android:text="Set a Goal!"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/quibitTextView"
        android:layout_marginLeft="68dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/quibitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addQuibitfloatingActionButton"
        android:layout_alignStart="@+id/addQuibitfloatingActionButton"
        android:layout_below="@+id/addQuibitfloatingActionButton"
        android:layout_marginEnd="35dp"
        android:text="Add a Quibit"
        android:textAlignment="center"
        android:layout_marginRight="68dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/goalTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="91dp" />

</android.support.constraint.ConstraintLayout>