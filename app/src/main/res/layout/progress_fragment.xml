<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:layout_editor_absoluteY="81dp"
tools:layout_editor_absoluteX="0dp"
android:background="@drawable/gradient">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/setGoalfloatingActionButton"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addQuibitfloatingActionButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chart1"
        android:layout_marginBottom="7dp"
        android:clickable="true"
        app:backgroundTint="@color/positiveColor"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/quibitTextView"
        app:layout_constraintLeft_toLeftOf="@+id/quibitTextView"
        app:layout_constraintRight_toRightOf="@+id/quibitTextView"
        app:srcCompat="@drawable/quibit"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/setGoalfloatingActionButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/addQuibitfloatingActionButton"
        android:layout_marginStart="7dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="normal"
        app:layout_constraintTop_toTopOf="@+id/addQuibitfloatingActionButton"
        app:srcCompat="@android:drawable/ic_search_category_default"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-246dp" />

    <TextView
        android:id="@+id/goalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setGoalfloatingActionButton"
        android:layout_alignStart="@+id/setGoalfloatingActionButton"
        android:layout_below="@+id/setGoalfloatingActionButton"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:text="Set a Goal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setGoalfloatingActionButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/quibitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addQuibitfloatingActionButton"
        android:layout_alignStart="@+id/addQuibitfloatingActionButton"
        android:layout_below="@+id/addQuibitfloatingActionButton"
        android:text="Add a Quibit"
        android:layout_marginEnd="7dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="169dp"
        android:layout_marginRight="7dp" />

</android.support.constraint.ConstraintLayout>